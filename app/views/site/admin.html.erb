<div class="container">
  <div class="row">
    <div class="col-sm-6 mx-auto">
      <div class="p-4"></div>
      <% if @is_force %>
        <div class="alert alert-primary" role="alert">
          <%= "Форсированное значение курса установлено на #{@force_rate} до #{DateTime.parse(@force_end_datetime).strftime("%d.%m.%Y %H:%M")}" %>
        </div>
      <% end %>
      <div class="card">
        <div class="card-body">
          <%= form_with(url: admin_path, method: :post, local: true) do %>
            <div class="form-group">
              <%= label_tag("force_end_datetime", "Дата и время окончания:") %>
              <%= datetime_field(nil, :force_end_datetime, value: @force_end_datetime, class: "form-control") %>
            </div>
            <div class="form-group">
              <%= label_tag("force_rate_value", "Значение курса:") %>
              <%= text_field_tag(:force_rate, @force_rate, class: "form-control") %>
            </div>
            <%= submit_tag("Применить", class: "btn btn-outline-primary btn-block") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>